<?xml version="1.0" encoding="utf-8"?>

<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="Readit.Views.CommentViewCell">
    <StackLayout Orientation="Horizontal" Padding="16,8" Spacing="8">
        <StackLayout x:Name="Content" Orientation="Vertical" HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal" Spacing="5">
                <Label FontSize="Micro" Text="by" TextColor="Gray" />
                <Label FontSize="Micro" x:Name="Author" TextColor="Gray" />
                <Label FontSize="Micro" x:Name="TimeSincePosted" TextColor="Gray" />
            </StackLayout>
            <Label FontSize="Small" x:Name="Body" LineBreakMode="WordWrap" Margin="0,5,0,0" />
        </StackLayout>
        <Image IsVisible="false" WidthRequest="50" HeightRequest="50" x:Name="Thumbnail" HorizontalOptions="End" />
    </StackLayout>
</ViewCell>