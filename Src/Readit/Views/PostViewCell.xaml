<?xml version="1.0" encoding="utf-8"?>

<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="Readit.Views.PostViewCell">
    <StackLayout Orientation="Horizontal" Padding="16,8">
        <StackLayout x:Name="Content" Orientation="Vertical" HorizontalOptions="FillAndExpand">
            <Label FontSize="Medium" x:Name="Title" />
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Micro" LineBreakMode="TailTruncation" x:Name="Subreddit" />
                
                <Label FontSize="Micro" LineBreakMode="TailTruncation" x:Name="Author" />
                <!-- TEMP / DEBUG only -->
                <Label FontSize="Micro" LineBreakMode="TailTruncation" x:Name="URL" />
            </StackLayout>
        </StackLayout>
        <Image IsVisible="false" WidthRequest="50" HeightRequest="50" x:Name="Thumbnail" HorizontalOptions="End" />
    </StackLayout>
</ViewCell>